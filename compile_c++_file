#!/bin/bash
if [ -e $1 ];
then
  rm $1
fi
cc_file="$1.cc"
no_file=$(find $cc_file)
if [ "$no_file" = "" ];
then
  echo ***Error: $cc_file does not exist***
else
  echo File $cc_file found, creating exe file
  if [ "$2" = "" ];
  then
     g++ -Wall -Werror $cc_file -o $1
  else
     g++ -Wall -Werror $cc_file -o $1 -l$2
  fi
  if [ -e $1 ];
  then
    echo Executable $1 was created!
	date
  fi
fi
